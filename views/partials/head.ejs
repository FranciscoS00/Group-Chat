<style>
    /*chat ----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------*/
    *, *:before, *:after {
        box-sizing: inherit;
    }

    html {
        box-sizing: border-box;
        height: 100%;
        margin: 0;
        padding: 0;
    }

    .topbar {

        height: 25px;
        background: #181818; /* 15317E*/
        color: #fff;
        font-size: 10px;
        padding: 0 8px;


    }
